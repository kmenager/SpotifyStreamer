<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_layout_height"
                android:paddingEnd="@dimen/row_horizontal_margin"
                android:paddingLeft="@dimen/row_horizontal_margin"
                android:paddingRight="@dimen/row_horizontal_margin"
                android:paddingStart="@dimen/row_horizontal_margin"
                android:background="@android:color/white">

    <ImageView
        android:id="@+id/artist_icon"
        android:layout_width="@dimen/row_width_image"
        android:layout_height="@dimen/row_height_image"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_empty_artist"
        android:contentDescription="@string/row_artist_content_description"/>

    <TextView
        android:id="@+id/artist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingTop="@dimen/row_padding_top"
        android:paddingBottom="@dimen/row_bottom_padding"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toEndOf="@+id/artist_icon"
        android:layout_toRightOf="@+id/artist_icon"
        android:paddingLeft="@dimen/row_horizontal_margin"
        android:paddingStart="@dimen/row_horizontal_margin"
        android:textSize="@dimen/row_text_size"
        tools:text="New Text"/>
</RelativeLayout>