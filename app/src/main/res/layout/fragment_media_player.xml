<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:columnCount="5">

    <android.support.v7.widget.Space
        android:layout_height="8dp"
        app:layout_columnSpan="5"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"/>

    <TextView
        android:id="@+id/artistName"
        android:gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        app:layout_columnSpan="5"
        app:layout_columnWeight="1"
        app:layout_gravity="fill_horizontal"
        tools:text="New Text"/>

    <TextView
        android:id="@+id/albumName"
        android:gravity="center_horizontal"
        android:text="New Text"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        app:layout_columnSpan="5"
        app:layout_columnWeight="1"
        app:layout_gravity="fill_horizontal"/>

    <ImageView
        android:id="@+id/albumArtwork"
        android:gravity="center_horizontal"
        app:layout_columnSpan="5"
        app:layout_columnWeight="1"
        app:layout_gravity="fill_horizontal"
        tools:src="@drawable/ic_album_empty"/>

    <TextView
        android:id="@+id/trackName"
        android:gravity="center_horizontal"
        app:layout_columnSpan="5"
        app:layout_columnWeight="1"
        app:layout_gravity="fill_horizontal"
        tools:text="New Text"/>

    <SeekBar
        android:id="@+id/seekBar"
        android:gravity="center_horizontal"
        android:theme="@android:style/Theme.Material"
        app:layout_columnSpan="5"
        app:layout_columnWeight="1"
        app:layout_gravity="fill_horizontal"/>

    <TextView
        android:id="@+id/trackCurrent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:text="New Text"
        app:layout_column="0"
        app:layout_columnWeight="1"/>

    <TextView
        android:id="@+id/trackDuration"
        android:layout_width="wrap_content"
        android:paddingEnd="16dp"
        android:paddingRight="16dp"
        android:text="New Text"
        app:layout_column="4"
        app:layout_columnWeight="1"
        app:layout_gravity="right"/>

    <android.support.v7.widget.Space
        android:layout_height="3dp"
        app:layout_columnSpan="5"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        app:layout_columnSpan="5"
        app:layout_columnWeight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/ic_skip_previous_black_36dp"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/playPause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_weight="1"
            tools:src="@drawable/ic_play_circle_filled_black_48dp"/>

        <ImageButton
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/ic_skip_next_black_36dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <android.support.v7.widget.Space
        android:layout_height="8dp"
        app:layout_columnSpan="5"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"/>
</android.support.v7.widget.GridLayout>