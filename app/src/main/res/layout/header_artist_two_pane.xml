<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                      xmlns:app="http://schemas.android.com/apk/res-auto"
                                      xmlns:tools="http://schemas.android.com/tools"
                                      android:layout_width="match_parent"
                                      android:layout_height="wrap_content"
                                      android:background="@android:color/white"
                                      app:columnCount="2">

    <ImageView
        android:id="@+id/backdrop"
        android:layout_width="0dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_empty_artist"
        android:transitionName="@string/transition_image_key"
        tools:src="@drawable/ic_album_empty"
        app:layout_columnWeight="1"
        android:contentDescription="@string/row_artist_content_description"/>

    <TextView
        android:id="@+id/artist_name_header"
        android:layout_width="0dp"
        android:layout_marginBottom="@dimen/abc_list_item_padding_horizontal_material"
        android:layout_marginTop="@dimen/abc_list_item_padding_horizontal_material"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        tools:text="Artist"
        app:layout_columnWeight="1"
        app:layout_gravity="fill_horizontal"/>

</android.support.v7.widget.GridLayout>